{
    "compounds": [
        {
            "configurations": ["Client", "Server"],
            "name": "All"
        }
    ],
    "configurations": [
        {
            "linux": {
                "runtimeExecutable": "/snap/bin/chromium"
            },
            "name": "Client",
            "port": 29501,
            "request": "launch",
            "runtimeArgs": ["--remote-debugging-port=29501", "--new-window"],
            "sourceMapPathOverrides": {
                "webpack://client/./*": "${workspaceFolder}/Client/*"
            },
            "sourceMaps": true,
            "type": "chrome",
            "url": "http://localhost:29500?gql=http://localhost:29098",
            "userDataDir": "${workspaceFolder}/.vscode/chrome",
            "webRoot": "${workspaceFolder}"
        },
        {
            "console": "integratedTerminal",
            "env": {
                "DEBUG": "*"
            },
            "envFile": "${workspaceFolder}/.vscode/.env",
            "name": "Server",
            "request": "launch",
            "runtimeArgs": ["run-script", "debug-server"],
            "runtimeExecutable": "npm",
            "smartStep": true,
            "sourceMaps": true,
            "type": "node"
        },
        {
            "console": "externalTerminal",
            "envFile": "${workspaceFolder}/.vscode/.env",
            "name": "Start Server",
            "request": "launch",
            "runtimeArgs": ["run-script", "start-server"],
            "runtimeExecutable": "npm",
            "type": "node"
        }
    ],
    "version": "0.2.0"
}
