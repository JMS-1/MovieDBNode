{
    "compounds": [
        {
            "configurations": ["Client", "Server"],
            "name": "All"
        }
    ],
    "configurations": [
        {
            "linux": {
                "runtimeExecutable": "/snap/bin/chromium"
            },
            "name": "Client",
            "port": 29091,
            "request": "launch",
            "runtimeArgs": ["--remote-debugging-port=29091", "--new-window"],
            "sourceMapPathOverrides": {
                "webpack:///./*": "${workspaceFolder}/Client/*"
            },
            "sourceMaps": true,
            "type": "chrome",
            "url": "http://localhost:29099",
            "userDataDir": "${workspaceFolder}/.vscode/chrome",
            "webRoot": "${workspaceFolder}"
        },
        {
            "console": "internalConsole",
            "env": {
                "DATABASE": "mongodb://localhost:27017/movie-db",
                "DEBUG": "startup, api",
                "PORT": "29099"
            },
            "name": "Server",
            "port": 23902,
            "protocol": "inspector",
            "request": "launch",
            "runtimeArgs": ["run-script", "debug-server"],
            "runtimeExecutable": "npm",
            "smartStep": true,
            "sourceMaps": true,
            "type": "node"
        }
    ],
    "version": "0.2.0"
}
