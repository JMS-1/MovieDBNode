{
    "tasks": [
        {
            "isBackground": true,
            "label": "watch client",
            "options": {
                "cwd": "Client"
            },
            "problemMatcher": {
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": {
                        "regexp": "(.*?)"
                    },
                    "endsPattern": {
                        "regexp": "bundle generation complete"
                    }
                },
                "owner": "typescript",
                "pattern": "$tsc"
            },
            "script": "start",
            "type": "npm"
        }
    ],
    "version": "2.0.0"
}
