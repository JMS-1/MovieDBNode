{
    "tasks": [
        {
            "label": "build TSX",
            "problemMatcher": ["$awesometsc", "$awesomets-lint"],
            "script": "build-client",
            "type": "npm"
        },
        {
            "label": "build sematic",
            "problemMatcher": ["$awesometsc", "$awesomets-lint"],
            "task": "build-ui",
            "type": "gulp"
        },
        {
            "isBackground": true,
            "label": "watch TSX",
            "problemMatcher": ["$awesometsc", "$awesomets-lint"],
            "script": "watch-client",
            "type": "npm"
        },
        {
            "label": "start server",
            "options": {
                "env": {
                    "DATABASE": "mongodb://localhost:27017/movie-db",
                    "DEBUG": "startup, api",
                    "PORT": "29099"
                }
            },
            "problemMatcher": [],
            "script": "start-server",
            "type": "npm"
        },
        {
            "isBackground": true,
            "label": "watch semantic",
            "problemMatcher": ["$awesometsc", "$awesomets-lint"],
            "task": "watch-ui",
            "type": "gulp"
        },
        {
            "isBackground": true,
            "label": "watch SASS",
            "problemMatcher": "$tsc",
            "task": "watch-sass",
            "type": "gulp"
        },
        {
            "label": "build SASS",
            "problemMatcher": "$tsc",
            "task": "build-sass",
            "type": "gulp"
        },
        {
            "args": ["--watch", "-p", "\"${workspaceFolder}/Server/tsconfig.json\""],
            "command": "${workspaceFolder}/node_modules/.bin/tsc",
            "isBackground": true,
            "label": "watch API",
            "problemMatcher": "$tsc-watch",
            "type": "shell"
        },
        {
            "dependsOn": ["watch TSX", "watch SASS", "watch semantic", "watch API"],
            "group": "build",
            "label": "watch",
            "problemMatcher": []
        },
        {
            "label": "build API",
            "problemMatcher": [],
            "task": "build-server",
            "type": "gulp"
        },
        {
            "label": "build Client",
            "problemMatcher": [],
            "task": "build-client",
            "type": "gulp"
        },
        {
            "group": "build",
            "label": "build",
            "problemMatcher": [],
            "task": "build",
            "type": "gulp"
        }
    ],
    "version": "2.0.0"
}
