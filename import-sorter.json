{
    "generalConfiguration": {
        "exclude": ["\\.d\\.ts"],
        "sortOnBeforeSave": true
    },
    "importStringConfiguration": {
        "hasSemicolon": false,
        "trailingComma": "multiLine"
    },
    "sortConfiguration": {
        "customOrderingRules": {
            "rules": [
                {
                    "orderLevel": 0,
                    "regex": "^~"
                },
                {
                    "orderLevel": 30,
                    "regex": "^(movie-db-api)"
                },
                {
                    "orderLevel": 40,
                    "regex": "^\\./"
                },
                {
                    "orderLevel": 60,
                    "regex": "^\\.\\./\\.\\./"
                },
                {
                    "orderLevel": 50,
                    "regex": "^\\.\\./"
                }
            ]
        }
    }
}
