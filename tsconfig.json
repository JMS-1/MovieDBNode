{
  "compileOnSave": true,
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "inlineSources": true,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "sourceMap": true,
    "strictPropertyInitialization": false,
    "target": "es2017"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
